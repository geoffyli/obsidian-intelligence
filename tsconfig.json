{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			// Allows absolute imports from the 'src' directory
			"@/*": ["src/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7", // Or specific ES versions like "ES2018"
			"ESNext"
		],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"types": ["svelte", "node", "jest"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.svelte",
		"src/app.d.ts",
	],
	"exclude": [
		"node_modules",
		"main.js",
		"styles.css",
		"src/tests/**/*"
	]
}
